extends ./layoutUser

block content
    .divPadding
    |     
    .container-fluid(id='')
      .row
        .col-3(id='')
        |         
        .col-6.center-block.divPadding
          h3(align='center') Mis Citas &#x2764;
          |           
          hr
          |         
          each cita in dates  
            #accordion  
              .card
                #headingOne.card-header
                  h5.mb-0
                    button.btn.btn-link.btnCita(data-toggle='collapse', data-target='#collapseOne', aria-expanded='true', aria-controls='collapseOne') Ver Cita
                |                 
                #collapseOne.collapse.show(aria-labelledby='headingOne', data-parent='#accordion')
                  .card-body
                    form(action='')
                      .row
                        .col-6
                          label.txtColor(for='staticLugar') Lugar: 
                          |                           
                          input#staticLugar.form-control-plaintext(type='text', readonly='', value=cita.place)
                        |                         
                        .col-6
                          label.txtColor(for='staticHora') Hora:
                          |                           
                          input#staticHora.form-control(type='time', value=cita.time, disabled='')
                          |                           
                          label.txtColor(for='staticFecha') Fecha:
                          |                           
                          input#staticFecha.form-control(type='date', value=cita.date, disabled='')
                      |                       
                      .container-fluid.divBtnPadding
                        button.btn.btn-primary.btnColorR(type='button' href='/accept/'+cita.id) Aceptar
                        |                           
                        button.btn.btn-primary.btnColorR(type='button') Rechazar
                        |                           
                        button.btn.btn-primary.btnColorR(type='button') Modificar
        |         
        .col-3
